pnpm---
import { Icon } from "astro-icon/components";
---

<!-- There can't be a filter on parent element, or it will break `fixed` -->
<div class="back-to-top-wrapper">
    <div id="back-to-top-btn" class="back-to-top-btn hide flex items-center rounded-2xl overflow-hidden transition" onclick="backToTop()">
        <button aria-label="Back to Top" class="btn-card h-[3rem] w-[3rem] lg:h-[3.75rem] lg:w-[3.75rem]">
            <Icon name="material-symbols:keyboard-arrow-up-rounded" class="mx-auto"></Icon>
        </button>
    </div>
</div>

<style lang="stylus">
.back-to-top-wrapper
    width: 3.75rem
    height: 3.75rem
    position: absolute
    right: 0
    top: 0
    pointer-events: none

.back-to-top-btn
    color: var(--primary)
    font-size: 2.25rem
    font-weight: bold
    border: none
    position: fixed
    bottom: 10rem
    opacity: 1
    cursor: pointer
    transform: translateX(0)
    pointer-events: auto
    i
        font-size: 1.75rem
    &.hide
        transform: translateX(5rem) scale(0.9)
        opacity: 0
        pointer-events: none
    &:active
      transform: translateX(0) scale(0.9)
    
    // 桌面端：固定在屏幕右侧，完全脱离文章内容区域
    @media (min-width: 1024px)
        right: 10rem
        left: auto
        margin-right: 0
        transform: translateX(0)
        &.hide
            transform: translateX(100%) scale(0.9)
            opacity: 0
            pointer-events: none
        &:active
            transform: translateX(0) scale(0.9)
    
    // 移动端适配
    @media (max-width: 1023px)
        right: 1rem
        left: auto
        bottom: 5rem
        &.hide
            transform: translateX(100%) scale(0.9)
            opacity: 0
            pointer-events: none
        &:active
            transform: translateX(0) scale(0.9)

</style>

<script is:raw is:inline>
function backToTop() {
    window.scroll({ top: 0, behavior: 'smooth' });
}
</script>
